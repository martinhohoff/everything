<div class="navbar-wagon blurry">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand index-da-massa" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
  <div class="blurrer"></div>

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Battle", battlepage_path, class: "navbar-link index-da-massa" %>
      <%= link_to "Your movies", playershow_path, class: "navbar-link index-da-massa" %>
      <%= link_to "All users", points_path, class: "navbar-link index-da-massa" %>
      <%= link_to "Recommendations", recommend_path, class: "navbar-link index-da-massa" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item index-da-massa">
        <div class="dropdown">
          <% if current_user.photo.filename.nil? %>
            <%= image_tag "anonymous.png", class: "avatar-square", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= cl_image_tag(current_user.photo, crop: :thumb, gravity: :face, class: "avatar-square", id: "navbar-wagon-menu", "data-toggle" => "dropdown") %>
            <i class="fas fa-caret-down" data-toggle="dropdown"></i>
          <% end %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <a><%= current_user.username %></a>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-cog"></i> <%= t(".settings", default: "Settings") %>
              <% end %>
            </li>
            <li>
              <%=link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link index-da-massa" %>
      <%= link_to t(".sign_up", default: "Create your account"), new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link index-da-massa" %>
    <% end %>
  </div>

