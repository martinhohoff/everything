<div class="wrapper-profiles">
  <div class="container-profiles">
    <table id="profiletable">
      <% @other_users.each do |otheruser| %>
        <tr class="each-profile">
          <td class="profile-table-photo"><%= cl_image_tag(current_user.photo, width: 150, height: 150, crop: :thumb, gravity: :face, class: "avatar") %> </td>
          <td class="profile-table-email"> <%= otheruser.email %> </td>
          <td class="profile-table-relevance"> <%= @relevances[@other_users.index(otheruser)]  %> </td>
          <td class="profile-table-follow"><a href="#" class="btn-red">Follow</a></p></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
