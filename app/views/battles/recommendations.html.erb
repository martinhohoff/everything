<div class="wrapper-recommendations text-center">
  <div class="container-recommendations purple-background text-center">
    <h2 class="pagetitle">
      <span style="font-size: 60px; font-weight: bold;">Movies you'll love!</span> <br> <span style="font-size: 30px; font-weight: lighter">Based on what you've told us, these are our best recommendations:</span>
    </h2>
    <% i = 1 %>
    <% @recommendations.each do |rec| %>
      <div class="each-recommendation">
        <%= link_to movie_path(rec), class: "" do %>
          <div class="card recommendation rec-poster">
          </div>
        <% end %>
        <%= link_to movie_path(rec), class: "" do %>
          <div class="name">
            <h3>
              <%= i %>. <%= rec.title %>
            </h3>
          </div>
        <% end %>
        <form action="/seenalready" method="post">
          <input name="_method" type="hidden" value="patch"/>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag :user_id, current_user.id %>
          <%= hidden_field_tag :movie_id, rec.id %>
          <input type="submit" value="Seen it!" class="btn btn-green">
        </form>
      </div>
      <% i += 1 %>
    <% end %>
  </div>
</div>
