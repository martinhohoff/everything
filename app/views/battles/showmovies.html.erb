<% if @points.empty? %>
    <div class="container-nothing">
      <h2>You haven't rated enough films yet. :/</h2>
      <br>
      <h5>Let's get you started:</h5>
      <br>
      <br>
      <h3>1. Tell us which movies you prefer.</h3>
      <h3>2. See your movie ranking.</h3>
      <h3>3. Get recommendations!</h3>
    </div>
    <div class="container-nothing">
      <p class="text-center"> 
        <%= link_to "RATE MOVIES NOW!", battlepage_path, class: "btn-purple"  %>
      </p>
    </div>
<% else %>
  <div class="container">
    <h1>Seus filmes preferidos</h1>
    <% i = 1 %>
    <% @points.each do |point| %>
      <div class="movie-list-item">
        <div class="name">
          <h3><%= i %>. <%= point.movie.title %></h3>
          <h5>(<%= point.movie.year %>)</h5>
        </div>
        <div class="card recommendation">
        </div>
        <% i += 1 %>  
      </div>
      <% end %>
  </div>
<% end %>