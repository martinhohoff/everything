<div class="additional-info" style="display:none;">
  <% @movie1.each do |movie| %>
    <h1 class="movie1-titles"> <%= movie.title %> </h1>
  <% end %>
  <% @movie2.each do |movie| %>
    <h1 class="movie2-titles"> <%= movie.title %> </h1>
  <% end %>
  <% @movie1.each do |movie| %>
    <h1 class="movie1-ids"> <%= movie.id %> </h1>
  <% end %>
  <% @movie2.each do |movie| %>
    <h1 class="movie2-ids"> <%= movie.id %> </h1>
  <% end %>
  <h1 id="movie1-count">0</h1>
  <h1 id="movie2-count">0</h1>
  <h1 id="movies-not-seen"></h1>
</div>

<div class="tabs">
  <a class="tab active" href="#">
