<div class="additional-info" style="display: none;">
  <% @movie1.each do |movie| %>
    <h1 class="movie1-titles"> <%= movie.title %> </h1>
  <% end %>
  <% @movie2.each do |movie| %>
    <h1 class="movie2-titles"> <%= movie.title %> </h1>
  <% end %>
  <% @movie1.each do |movie| %>
    <h1 class="movie1-ids"> <%= movie.id %> </h1>
  <% end %>
  <% @movie2.each do |movie| %>
    <h1 class="movie2-ids"> <%= movie.id %> </h1>
  <% end %>
  <h1 id="movie1-count">0</h1>
  <h1 id="movie2-count">0</h1>
</div>

<div class="wrapper-combat">
  <div class="container-fight">
    <div class="movie-1">
      <div class="movie-header">
        <%= image_tag " ", class: "poster"%>
      </div>
      <div class="movie-details">
        <h1 class="movie-title text-center"> <%= @movie1[0].title %> </h1>
        <div class="btn btn-danger switch-movie" id="switchmovie1">Haven't seen this shit</div>
        <form action="/point" method="post">
          <input name="_method" type="hidden" value="patch"/>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <%= hidden_field_tag :user_id, current_user.id %>
          <%= hidden_field_tag :vote_result, 1 %>
          <input type="text" name="movie1_id" id="movie1-select1" style="display: none;">
          <input type="text" name="movie2_id" id="movie2-select1" style="display: none;">
          <input type="submit" id="vote1-btn" class="btn btn-success" value="Vote">
        </form>
      </div>
    </div>
    <div class="fightsymbol">
      <%= image_tag "https://svgsilh.com/svg/310788.svg", class: "battle-symbol"%>
    </div>
    <div class="movie-2">
        <div class="movie-header">
          <%= image_tag " ", class: "poster"%>
        </div>
        <div class="movie-details">
          <h1 class="movie-title text-center"> <%= @movie2[0].title %> </h1>
          <div class="btn btn-danger switch-movie" id="switchmovie2">Haven't seen this shit</div>
          <form action="/point" method="post">
            <input name="_method" type="hidden" value="patch"/>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <%= hidden_field_tag :user_id, current_user.id %>
            <%= hidden_field_tag :vote_result, 2 %>
            <input type="text" name="movie1_id" id="movie1-select2" style="display: none;">
            <input type="text" name="movie2_id" id="movie2-select2" style="display: none;">
            <input type="submit" id="vote1-btn" class="btn btn-success" value="Vote">
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

