<div class="wrapper-profiles text-center">
  <div class="container-profiles text-center">
    <table id="profiletable">
      <% @other_users.each do |otheruser| %>
        <tr class="each-profile">
          <td class="profile-position">x</td>
          <td class="profile-table-photo">
            <% if otheruser.photo.filename.nil? %>
              <%= image_tag "anonymous.png", width: 150, height: 150, class: "avatar" %>
            <% else %>
              <%= cl_image_tag(otheruser.photo, width: 150, height: 150, crop: :thumb, gravity: :face, class: "avatar") %>
            <% end %>
          </td>
          <td class="profile-table-email">
            <% if !otheruser.username.nil? %>
              <%= otheruser.username %>
            <% else %>
              <%= otheruser.email %>
            <% end %>
          </td>
          <td class="profile-table-relevance"><%= @relevances[@other_users.index(otheruser)]%></td>
          <td class="profile-table-follow"></td>
          <td class="profile-table-space"></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
